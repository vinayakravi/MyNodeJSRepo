extends layout

block content
	link(rel='stylesheet', href='/stylesheets/signin.css')
	div.container
		div.row
			div.col-sm-6.col-md-4.col-md-offset-4
				h1.text-center.login-title Registration Details
					div.signup-wall
						form(class='form-signin', action='/signup', method='POST')
							input(type='text', name='username', class='form-control top', placeholder='Username',required, autofocus)
							input(type='password', name='password', class='form-control middle', placeholder='Password', required)
							input(type='email', name='email', class='form-control middle', placeholder='Email',required)
							input(type='text', name='firstName', class='form-control middle', placeholder='First Name',required)
							input(type='text', name='lastName', class='form-control bottom', placeholder='Last Name',required)
							button(class='btn btn-lg btn-primary btn-block', type='submit') Register
							span.clearfix
					#message
						if message
							h1.text-center.error-message #{message}