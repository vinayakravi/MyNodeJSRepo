extends layout

block content
	link(rel='stylesheet', href='/stylesheets/signin.css')
	div.container
		div.row
			div.col-sm-6.col-md-4.col-md-offset-4
				h1.text-center.login-title Registration Details
					#message
						if message
							h3.text-center.error-message #{message}
					div.signup-wall
						form(class='form-signin', action='/signup', method='POST',data-toggle="validator")
							div.form-group
								input(type='text', name='username', class='form-control top', placeholder='Username',required, autofocus, data-minlength="6")
								div.help-block.with-errors.error
							div.form-group
								input(type='password', name='password', class='form-control middle', placeholder='Password', required, data-minlength="6")
								div.help-block.with-errors.error
							div.form-group
								input(type='email', name='email', class='form-control middle', placeholder='Email',required, data-error="Bruh, that email address is invalid")
								div.help-block.with-errors.error
							div.form-group
								input(type='text', name='firstName', class='form-control middle', placeholder='First Name',required)
								div.help-block.with-errors.error
							div.form-group
								input(type='text', name='lastName', class='form-control bottom', placeholder='Last Name',required)
								div.help-block.with-errors.error
							div.form-group
								input(type='text', name='passcode', class='form-control bottom', placeholder='Signup Passcode',required)
								div.help-block.with-errors.error
							button(class='btn btn-lg btn-primary btn-block', type='submit') Register
							span.clearfix
					